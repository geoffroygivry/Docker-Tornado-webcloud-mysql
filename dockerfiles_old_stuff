FROM show0k/alpine-miniconda
ADD . /code
WORKDIR /code
USER root
RUN rm -rf /var/cache/apk/* && \
    rm -rf /tmp/*
RUN apk update
RUN apk add mesa-gl
RUN conda install matplotlib
RUN conda install -c conda-forge wordcloud
RUN conda install --yes --file requirements.txt
CMD ["python", "test_imports.py"]